<div class="logo mt-4 mb-4">
  <h1>Overtime Tracker</h1>
</div>

<% unless current_user.guest? %>
  <nav>
    <ul class="custom-nav nav nav-tabs mb-4">
      <li class="nav-item">
        <%= link_to "Home", root_path,
          class: "nav-link #{active?(root_path)}" %>
      </li>
      <li class="nav-item">
        <%= link_to "Time Entries", posts_path,
          class: "nav-link #{active?(posts_path)}" %>
      </li>
      <li class="nav-item">
        <%= link_to "Add new entry", new_post_path,
          class: "nav-link #{active?(new_post_path)}", id: "new-post-link" %>
      </li>

      <li class="nav-item dropdown ml-md-auto">
        <a class="nav-link dropdown-toggle" href="http://example.com"
          id="navbarDropdownMenuLink" data-toggle="dropdown">
          <% if user_signed_in? %>
            <%= current_user.first_name %>
          <% else %>
            Account
          <% end %>
        </a>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">

          <% if current_user.admin? %>
            <%= link_to "Admin Dashboard", admin_root_path,
              class: "dropdown-item" %>

            <div class="dropdown-divider"></div>
          <% end %>

          <% if user_signed_in? %>
            <%= link_to "Log out", destroy_user_session_path,
              method: :delete, class: "dropdown-item" %>
          <% else %>
            <%= link_to "Log in", new_user_session_path,
              class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </nav>
<% end %>
