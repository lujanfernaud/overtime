<h1 class="h2 mb-4">
  <%= @post.rationale %>
</h1>

<div class="card">
  <div class="card-body">
    <p class="h5 mb-3">
      <span>Overtime Amount Requested:</span>
      <%= @post.overtime_hours %> hours
    </p>

    <p class="h5 mb-3">
      <span>Employee:</span>
      <%= @post.user.full_name_with_comma %>
    </p>

    <p class="h5 mb-3">
      <span>Date:</span>
      <%= @post.date %>
    </p>

    <p class="h5 mb-0">
      <span>Current Stage of Approval:</span>
      <span class="badge <%= status_badge(@post) %>">
        <%= @post.status.capitalize %>
      </span>
    </p>
  </div>
</div>

<% if current_user.authorized_to_edit?(@post) %>
  <div class="mt-3">
    <%= link_to "Edit entry", edit_post_path(@post) %>
  </div>
<% end %>
