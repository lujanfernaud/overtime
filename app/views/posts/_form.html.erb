<%= form_for post, role: "form" do |f| %>
  <% if post.errors.any? %>
    <% post.errors.full_messages.each do |error| %>
      <%= js add_gritter(
        error,
        title: "Error",
        sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rationale %>
    <%= f.text_area :rationale, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.radio_button :status, "submitted" %>
    <%= f.label :status, "Submitted", value: "submitted" %><br>

    <%= f.radio_button :status, "approved" %>
    <%= f.label :status, "Approved", value: "approved" %><br>

    <%= f.radio_button :status, "rejected" %>
    <%= f.label :status, "Rejected", value: "rejected" %><br>
  </div>

  <%= f.submit "Save", class: "btn btn-primary btn-block" %>

<% end %>
